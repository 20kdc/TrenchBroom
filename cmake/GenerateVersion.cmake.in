INCLUDE("@CMAKE_SOURCE_DIR@/cmake/Utils.cmake")
GET_APP_VERSION(@APP_DIR@ APP_VERSION_MAJOR APP_VERSION_MINOR APP_VERSION_MAINTENANCE)
GET_BUILD_ID("@GIT_EXECUTABLE@" "@CMAKE_SOURCE_DIR@" APP_VERSION_BUILD_ID)
STRING(TIMESTAMP APP_VERSION_BUILD_TIME "%Y-%m-%d-%H:%M:%S")
SET(APP_VERSION_BUILD_CHANNEL "alpha")

SET(APP_VERSION_BUILD_TYPE @CMAKE_BUILD_TYPE@)
STRING(SUBSTRING @CMAKE_BUILD_TYPE@ 0 1 APP_VERSION_BUILD_TYPE_SHORT)
CONFIGURE_FILE("@APP_SOURCE_DIR@/Version.h.in" "@CMAKE_CURRENT_BINARY_DIR@/Version.h" @ONLY)
