uniform bool RenderGrid;
uniform float GridSize;
uniform float GridAlpha;
uniform float CameraZoom;

uniform vec3 Normal;

varying vec4 modelCoordinates;

float grid(vec3 coords, vec3 normal, float depth, float zoom, float gridSize);

void main() {
	if (RenderGrid && GridAlpha > 0.0) {
        float gridValue = grid(modelCoordinates.xyz, Normal.xyz, 0.0, CameraZoom, GridSize);
        gl_FragColor = vec4(0.0, 0.0, 0.0, gridValue * GridAlpha);
	}
}